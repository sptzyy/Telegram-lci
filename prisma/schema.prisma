datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model BotToken {
  id        Int      @id @default(autoincrement())
  token     String
  userId    Int
  createdAt DateTime @default(now())
}

model Log {
  id        Int      @id @default(autoincrement())
  message   String
  action    String
  userId    Int
  createdAt DateTime @default(now())
}